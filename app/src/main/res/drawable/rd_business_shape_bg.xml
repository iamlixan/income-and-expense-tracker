<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">

                    <solid android:color="@color/shakespeare" />
                    <stroke android:width="@dimen/_1dp" android:color="@color/shakespeare" />
                    <corners android:radius="@dimen/_4dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_icn_check"
                android:width="@dimen/_12dp"
                android:height="@dimen/_10dp"
                android:gravity="top|end"
                android:top="@dimen/_7dp"
                android:end="@dimen/_7dp"
                />

        </layer-list>

    </item>

    <item>
        <shape
            android:shape="rectangle">

            <solid android:color="@color/white" />
            <stroke android:width="@dimen/_1dp" android:color="@color/shakespeare" />
            <corners android:radius="@dimen/_4dp" />
        </shape>
    </item>

</selector>